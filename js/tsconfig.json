{
  "compilerOptions": {
    "outDir": "dist",
    "declarationDir": "types",
    "target": "es5", // For wider compatibility
    "module": "CommonJS", // This will be overridden for ESM build
    "strict": false,
    "allowJs": true,
    "checkJs": true,
    "noEmitOnError": true,
    "emitDeclarationOnly": false,
    "incremental": true,
    "composite": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["index.js", "lib", "test", "relayed.js"]
}
